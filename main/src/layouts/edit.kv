<EditScreen>:

    name: "edit"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: toolbar
            title: "Adicionar"
            left_action_items: [["arrow-left", lambda x: app.back()]]

        MDScrollView:
            MDList:
                id: list_input
                padding: 50
                spacing: 20

                MDTextField:
                    id: field
                    hint_text: "Categoria"
                    icon_right: "shape"
                    readonly: True
                    on_focus: if self.focus: root.open()

                MDTextField:
                    id: name
                    hint_text: "Nome"
                    icon_right: "pencil"
                    write_tab: False

                MDTextField:
                    id: price
                    hint_text: "Pre√ßo"
                    icon_right: "currency-usd"
                    write_tab: False

                MDTextField:
                    id: brand
                    hint_text: "Marca"
                    icon_right: "domain"
                    write_tab: False

                MDTextField:
                    id: supplier
                    hint_text: "Fornecedor"
                    icon_right: "cart"
                    write_tab: False


    MDBoxLayout:
        padding: 50
        spacing: 30
        orientation: "vertical"
        MDRaisedButton:
            text: "Salvar"
            pos_hint: {"right": 1}
            size_hint: 0.2, 0
            on_release: root.get()

    MDBoxLayout:
        id: box_delete
        padding: 50
        spacing: 30
        orientation: "vertical"


<IconListItem>

    IconLeftWidget:
        icon: root.icon