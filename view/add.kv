<AddScreen>:
    name: "add"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Adicionar"
            left_action_items: [["arrow-left", lambda x: app.back()]]

        MDScrollView:
            MDList:
                padding: 50
                spacing: 20
                MDTextField:
                    id: name
                    hint_text: "Nome"
                    mode: "rectangle"
                    icon_right: "pencil"

                MDTextField:
                    id: price
                    hint_text: "Pre√ßo"
                    mode: "rectangle"
                    icon_right: "currency-usd"

                MDTextField:
                    id: brand
                    hint_text: "Marca"
                    mode: "rectangle"
                    icon_right: "domain"

                MDTextField:
                    id: supplier
                    hint_text: "Fornecedor"
                    mode: "rectangle"
                    icon_right: "cart"


    MDBoxLayout:
        padding: 50
        orientation: "vertical"
        MDRaisedButton:
            text: "Salvar"
            pos_hint: {"right": 1}
            size_hint: 0.2, 0
            on_release: root.get()