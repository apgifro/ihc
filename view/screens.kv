ScreenManager:
    StartScreen:
    AddScreen:

<StartScreen>:
    name: "start"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Estoque"
            right_action_items: [["magnify"]]

        MDScrollView:
            MDList:
                id: list

        MDFloatingActionButton:
            icon: "plus"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"right": 0.99}
            on_press: root.manager.current = "add"

<AddScreen>:
    name: "add"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Adicionar"
            left_action_items: [["arrow-left", lambda x: app.back()]]

        MDScrollView:
            MDList:
                padding: 50
                spacing: 20
                MDTextField:
                    id: name
                    hint_text: "Nome"
                    mode: "rectangle"

                MDTextField:
                    id: price
                    hint_text: "Pre√ßo"
                    mode: "rectangle"

                MDTextField:
                    id: brand
                    hint_text: "Marca"
                    mode: "rectangle"

                MDTextField:
                    id: supplier
                    hint_text: "Fornecedor"
                    mode: "rectangle"

    MDBoxLayout:
        padding: 50
        orientation: "vertical"
        MDRaisedButton:
            text: "Salvar"
            pos_hint: {"right": 1}
            size_hint: 0.2, 0
            on_release: root.get()